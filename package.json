	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"netlify:deploy": "netlify deploy --dir=./build -p -m  \"$(git log -1 --pretty=%B)\"",
		"lint": " eslint . --cache --cache-location node_modules/.cache/eslint \"src/**/*.{js,jsx}\" --quiet",
		"lint:fix": " eslint . --fix --cache --cache-location node_modules/.cache/eslint  \"src/**/*.{js,jsx,ts,tsx}\"",
		"format": "prettier --check \"./src/**/*.{js,ts,tsx,jsx,json,md,scss}\"",
		"format:fix": "prettier --write \"./src/**/*.{js,ts,tsx,jsx,json,md,scss}\""
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
